<div class="form-style-5">
  <p id="notice"><%= notice %></p>
  <legend>Pacientes</legend>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Sexo</th>
        <th>Data de Nascimento</th>
        <th>Occupação</th>
        <th>Telefone</th>
        <th>Rua</th>
        <th>Bairro</th>
        <th>Cidade</th>
        <th>Estado</th>
        <th>Exposição ao Sol</th>
        <th>Horário</th>
        <th>Tabagismo</th>
        <th>Frequência</th>
        <th>Parou o Tabagismo</th>
        <th>O que fumava</th>
        <th>Começou a beber</th>
        <th>Frequência</th>
        <th>Parou de beber</th>
        <th>Bebiddas</th>
        <th>Câncer</th>
        <th>Protese</th>
        <th>Sexo Oral desprotegido</th>
        <th>Observação</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @pacients.each do |pacient| %>
        <tr>
          <td><%= pacient.name %></td>
          <td><%= pacient.sex %></td>
          <td><%= pacient.birth %></td>
          <td><%= pacient.occupation %></td>
          <td><%= pacient.phone %></td>
          <td><%= pacient.street %></td>
          <td><%= pacient.neighborhood %></td>
          <td><%= pacient.city %></td>
          <td><%= pacient.state %></td>
          <td><%= pacient.totalExposition %></td>
          <td><%= pacient.dayPeriod %></td>
          <td><%= pacient.startedTabagism %></td>
          <td><%= pacient.frequenceSmoking %></td>
          <td><%= pacient.stopedSmoking %></td>
          <td><%= pacient.whatSmoked %></td>
          <td><%= pacient.startedDrinking %></td>
          <td><%= pacient.frequenceDrinking %></td>
          <td><%= pacient.stopedDrinking %></td>
          <td><%= pacient.whatDrinked %></td>
          <td><%= pacient.whoHadCancer %></td>
          <td><%= pacient.protesis %></td>
          <td><%= pacient.oralSex %></td>
          <td><%= pacient.observation %></td>
          <td>
            <%= link_to 'Editar', edit_pacient_path(pacient) %>
            <%= link_to 'Apagar', pacient, method: :delete%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="button-style">
  <%= link_to 'Cadastrar Paciente', new_pacient_path%>
  <%= link_to 'Home', root_path%>
</div>